{
  "name": "social-tippster",
  "version": "1.0.0",
  "type": "module",
  "description": "Social media platform people who loves football",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "node dev-check.mjs && concurrently --kill-others-on-fail --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "standard-version",
    "commit": "git-cz",
    "start:test": "cross-env NODE_ENV=test cd backend && nest start",
    "test:auth:run": "./tests/backend/run-auth-integration-tests.sh",
    "test": "jest --runInBand",
    "test:e2e": "npx playwright test"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/testing": "^11.1.2",
    "@nestjs/typeorm": "^11.0.0",
    "@playwright/test": "^1.52.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "detect-port": "^2.1.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-dev-server": "^11.0.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "frontend/**/*.{js,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "frontend/**/*.{json,md}": [
      "prettier --write"
    ],
    "backend/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "backend/**/*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^1.9.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.0"
  }
}
