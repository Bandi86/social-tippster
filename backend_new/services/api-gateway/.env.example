# API Gateway
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3002

# Microservice URLs (Docker belső kommunikációhoz később használhatók belső nevek is)
AUTH_SERVICE_URL=http://auth:3001 # or localhost
USER_SERVICE_URL=http://user:3003
POST_SERVICE_URL=http://post:3004
STAT_SERVICE_URL=http://stat:3005
TIPP_SERVICE_URL=http://tipp:3006
NOTIFICATIONS_SERVICE_URL=http://notifications:3007
CHAT_SERVICE_URL=http://chat:3008
DATA_SERVICE_URL=http://data:3009
IMAGE_SERVICE_URL=http://image:3010
LIVE_SERVICE_URL=http://live:3011
LOG_SERVICE_URL=http://log:3012
ADMIN_SERVICE_URL=http://admin:3013

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379
CACHE_TTL=300

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_REQUESTS=100

# Logging
LOG_LEVEL=debug

